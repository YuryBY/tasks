<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 1.1//EN"
       "http://jakarta.apache.org/struts/dtds/tiles-config_1_1.dtd">

<tiles-definitions>

	<!-- Main Layout -->
	<definition name="main.layout" path="/jsp/tiles/mainLayout.jsp">
		<put name="header" value="/jsp/tiles/header.jsp" />
		<put name="title" value="" />
		<put name="body" value="" />
		<put name="footer" value="/jsp/tiles/footer.jsp" />
		<put name="right" value="/jsp/tiles/right.jsp" />
		<put name="left" value="/jsp/tiles/left.jsp" />
	</definition>

	<!-- Employee List Page -->
	<definition name="employeeList.page" extends="main.layout">
		<put name="title" value="page.title.list" />
		<put name="body" value="/jsp/employeeList.jsp" />
	</definition>

	<!-- Error Page -->
	<definition name="employeeError.page" extends="main.layout">
		<put name="title" value="page.title.error" />
		<put name="body" value="/jsp/error/error.jsp" />
	</definition>

</tiles-definitions>
  